<div class="container">

  <div class="show-top">

    <img src= <%= @video_game.picture %> />

    <h1 id-="show-title"><%= @video_game.title %></h1>

    <%= link_to collections_path(video_game: @video_game), method: :post do %>
      <div id="show-btn">Add to my collection</div>
    <% end %>

  </div>

  <div class="show-bottom">
    <h4>Platform</h4>
    <h3><%= @video_game.platform %></h3>
    <h4>Release</h4>
    <h3><%= (Time.at(@video_game.year.to_i).to_datetime).to_s.first(4).to_i %></h3>
<!--     <h4>Developer(s)</h4>
    <h3><%= @video_game.editor %></h3> -->
    <h4>Description</h4>
    <p><%= @video_game.description %></p>
  </div>

</div>

<div id="scrollUp" class = "mx-auto">
  <a href="#top"><img src="data:image/svg+xml;base64,"/></a>
</div>

