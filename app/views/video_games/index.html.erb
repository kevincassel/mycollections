
<% @videogames.each do |video_game| %>
  <div class="card-product">
    <img src="https://www.argusjeux.fr/medias/mario-kart-super-circuit-e58327.jpg" />
    <div class="card-product-infos">
      <h2><%= video_game.title %></h2>
      <h3><%= video_game.platform %></h3>
      <p><%= video_game.editor %></p>
      <p><%= video_game.year %></p>
      <%= link_to video_game_collections_path(video_game), method: :post do %>
        <img id="add-icon" src="data:image/svg+xml;base64,"/>
      <% end %>
    </div>
  </div>
<% end %>


<div id="scrollUp" class = "mx-auto">
  <a href="#top"><img src="data:image/svg+xml;base64,"/></a>
</div>
