<div  class="mx-auto" style="width: 200px;">
  <img src="https://www.freelogodesign.org/file/app/client/thumb/4a067ad0-724f-42c4-9333-8eb663a04564_200x200.png?1615315341319" alt="">
</div>

<div class="mx-auto" style="width: 400px;">
  <p>Buid your collection and share it with your friends!</p>
</div>

<div class = "formsearch flexbox">
  <div class="mx-auto" style="width: 300px;">
    <%= form_tag video_games_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a game"
      %>
      <%= submit_tag "Search", class: "btn btn-warning" %>
    <% end %>
  </div>
</div>


<div class="mx-auto" style="width: 200px;">
  <%= link_to "DISCOVER ALL OUR VIDEO GAMES", video_games_path, class: "btn btn-primary rounded-pill" %>
</div>

<div class="mx-auto" style="width: 200px;">
  <%= link_to "FIND A SHOP AROUND", shops_path, class: "btn btn-success rounded-pill" %>
</div>
 