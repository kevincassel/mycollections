<div class="container">
  <div class = "formsearch flexbox">
    <div>
      <%= form_tag new_collection_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a game"
        %>
    </div>
    <div id ="loupe">
        <%= image_submit_tag "data:image/svg+xml;base64,", :id => "loupe" %>
      <% end %>
    </div>
  </div>

  <% @games_api.each do |game| %>
    <div class="card-product">
      <img src= <%= game["cover"]["url"] %> />
      <div class="card-product-infos">
        <h2><%= game["name"] %></h2>
        <h3><%= game["platforms"].first["name"] %></h3>
        <h4><%= (Time.at(game["first_release_date"]).to_datetime).to_s.first(4) %></h4>
      </div>
        <%= link_to collections_path(game: game, query: params[:query]), method: :post do %>
          <img class="add-icon sweet-alert-demo" src="data:image/svg+xml;base64,"/>
        <% end %>
  </div>
  <% end %>
</div> 

