
<div class="top-cadre">
  <div class="flex-box encadrement">
    <h3>MY GAMING ROOM</h3>
  </div>
    <%= form_tag collections_path, method: :get do%>
      <%= select_tag "platform", options_for_select(["","PlayStation","PlayStation 2", "PlayStation 3", "PlayStation 4","Wii", "Game Boy Advance", "Game Boy"]), :onchange => "this.form.submit();",id:"platforms" %>
      <% end %>
      <%= form_tag collections_path, method: :get do%>
      <div class="search">
        <%= text_field_tag "title","search a game" ,id:"searchgame" %>
         <%= submit_tag "Find", :id => "find" %>
      <div>
        <button type="button" class="btn btn-light" id="addagame"><%= link_to "Add a game", new_collection_path %></button>
          <%= link_to scan_path do %>
            <img id="logoscan" src="data:image/svg+xml;base64," />
          <% end %>    
        </div>
      </div>
    <% end %>
</div>

<% @collections.each do |collection| %>
  <%= link_to video_game_path(collection.video_game_id) do %>
    <div class="card-product">
      <img src=<%= collection.video_game.picture %> />
      <div class="card-product-infos">
        <h2><%= collection.video_game.title %></h2>
        <h3><%= collection.video_game.platform %></h3>
        <p><%= collection.video_game.editor %></p>
        <h4><%= (Time.at(collection.video_game.year.to_i).to_datetime).to_s.first(4).to_i %></h4>
  <% end %>
    <%= link_to collection_path(collection), method: :delete, data: { confirm: "Are you sure you want to delete this game out of your collection ?" } do %>
      <div id="minus">
        <img class="card-collection-icon" src="data:image/svg+xml;base64," />
      </div>
    <% end %>
    </div>
  </div>
<% end %>

<div id="scrollUp" class = "mx-auto">
  <a href="#top"><img src="data:image/svg+xml;base64,"/></a>
</div>

