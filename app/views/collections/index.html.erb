
 

<%= form_tag collections_path, method: :get do%>
  <%= select_tag "platform", options_for_select(["","PlayStation", "PlayStation 3"]) %>
  <%= text_field_tag "title" %>
  <%= submit_tag %>
<% end %>


<div class="cards">
  <% @collections.each do |collection| %>
     <div class ="card-category">
        <div class="dropdown">
          <img class="card-collection-pic"  src=<%= collection.video_game.picture %>  class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" alt="">
          <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="#"><%= collection.video_game.title %></a>
            <div class="mb-4">
             <a class="dropdown-item" href="#"><%= collection.video_game.platform %></a>
            </div> 
            <%= link_to collection_path(collection), method: :delete, data: { confirm: "Are you sure you want to delete this game out of your collection ?" } do %>
              <div id="minus">
                <img class="card-collection-icon" src="data:image/svg+xml;base64," />
              </div>
            <% end %>
              <div id="detail">
                <%= link_to video_game_path(collection.video_game_id) do %>
                <img class="card-collection-icon" src="data:image/svg+xml;base64," />
                <% end %>
              </div>
            </div>
        </div>
      </div>
  <% end %>
</div>  

<div>
  <%= link_to "add a game", new_collection_path %>
</div>

<div id="scrollUp" class = "mx-auto">
  <a href="#top"><img src="data:image/svg+xml;base64,"/></a>
</div>

