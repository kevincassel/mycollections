<div class="container">
 
<div class= "flex-item">
  <div class = "formsearch flexbox flex-item">
    <div>
      <%= form_tag collections_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search in my collection"
        %>
    </div>
    <div id ="loupe">
        <%= image_submit_tag "data:image/svg+xml;base64,", :id => "loupe" %>
    <% end %>
    </div>
  </div>
</div>

<% @collections.each do |collection| %>
      <%= link_to video_game_path(collection.video_game_id) do %>
        <div class="card-collection">
          <img class="card-collection-pic" src=<%= collection.video_game.picture %> />
          <div class="card-collection-infos">
            <%= link_to collection_path(collection), method: :delete, data: { confirm: "Are you sure you want to delete this game out of your collection ?" } do %>
              <div class="card-collection-remove">
                <img class="card-collection-icon" src="data:image/svg+xml;base64," />
              </div>
            <% end %>
            <div class="card-collection-text">
              <h2><%= collection.video_game.title %></h2>
              <h3><%= collection.video_game.platform %></h3>
            </div>
      <% end %>
          </div>
        </div>
<% end %>

  <div>
    <%= link_to "add a game", new_collection_path %>
  </div>

<div id="scrollUp" class = "mx-auto">
  <a href="#top"><img src="data:image/svg+xml;base64,"/></a>
</div>

</div>
