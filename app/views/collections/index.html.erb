<% @collections.each do |collection| %>
  <div class="card-product">
    <img src="https://www.argusjeux.fr/medias/mario-kart-super-circuit-e58327.jpg"/>
    <div class="card-product-infos">
      <h2><%= collection.video_game.title %></h2>
      <h3><%= collection.video_game.platform %></h3>
      <p><%= collection.video_game.editor %></p>
      <p><%= collection.video_game.year %></p>
      <div id = "delete">
        <button type="button" class="btn btn-outline-secondary"><%= link_to "Delete",collection_path(collection), method: :delete,
          data: { confirm: "Are you sure you want to delete this game out of your collection?" } %></button>
      </div>
      <%# <img id="add-icon" src="data:image/svg+xml;base64," /> %>
    </div>
  </div>
<% end %>

<div id="scrollUp" class = "mx-auto">
  <a href="#top"><img src="data:image/svg+xml;base64,"/></a>
</div>
